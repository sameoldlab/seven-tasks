import { Button, VerticalBox, TabWidget, HorizontalBox, HorizontalBox } from "std-widgets.slint";

export component Counter {
    property <int> counter: 0;
    HorizontalBox {
        dec := Button {
            text: "-";
            clicked => {
                counter -= 1;
            }
        }

        Text {
            text: counter;
        }

        add := Button {
            text: "+";
            clicked => {
                counter += 1;
            }
        }
    }
}
